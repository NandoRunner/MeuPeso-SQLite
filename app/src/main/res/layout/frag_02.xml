<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_bright"
    android:orientation="horizontal"
    android:id="@+id/layFrag02"
    android:descendantFocusability="blocksDescendants">

    <TextView
        android:id="@+id/tvFrag02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="26sp"
        android:text="@string/textview"
        android:layout_centerHorizontal="true" />

    <GridView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvFrag02"
        android:layout_centerHorizontal="true"
        android:numColumns="5"
        android:id="@+id/grvFrag02Header"
        android:stretchMode="columnWidth" />

    <GridView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/grvFrag02Header"
        android:id="@+id/grvFrag02"
        android:fastScrollAlwaysVisible="true"
        android:fastScrollEnabled="true"
        android:numColumns="5"
        tools:style="@android:style/Widget.Material.GridView"
        android:stretchMode="columnWidth"
        android:focusable="false"
        android:focusableInTouchMode="false">
    </GridView>

</RelativeLayout>