<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:id="@+id/layFirstFrag">

    <TextView
        android:text="Balança Digital"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvTexto"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textAlignment="center"
        tools:ignore="HardcodedText" />

    <Space
        android:layout_width="match_parent"
        android:layout_below="@+id/mainLayout1"
        android:id="@+id/spc01"
        android:layout_height="40dp" />

    <Button
        android:text="Gravar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnGravar"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/spc01"
        android:freezesText="false"
        tools:ignore="HardcodedText" />

    <Space
        android:layout_width="match_parent"
        android:id="@+id/spc02"
        android:layout_below="@+id/btnGravar"
        android:layout_height="40dp" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:id="@+id/section_label"
        android:layout_height="20dp"
        android:textAlignment="center"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/spc02"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mainLayout1"
        android:gravity="center_vertical|center"
        android:layout_below="@+id/tvFrag1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_width="115dp">

            <TextView
                android:inputType="none"
                android:text="Usuário"
                android:ems="10"
                android:id="@+id/editText"
                android:layout_height="45dp"
                android:layout_width="wrap_content"
                tools:textAlignment="gravity"
                android:gravity="bottom"
                tools:ignore="HardcodedText" />

            <TextView
                android:inputType="none"
                android:text="Data"
                android:ems="10"
                android:id="@+id/editText2"
                android:layout_height="45dp"
                android:layout_width="wrap_content"
                tools:textAlignment="gravity"
                android:gravity="bottom"
                tools:ignore="HardcodedText" />

            <TextView
                android:inputType="none"
                android:text="Peso (Kg)"
                android:ems="10"
                android:id="@+id/editText3"
                android:layout_height="45dp"
                android:layout_width="wrap_content"
                tools:textAlignment="gravity"
                android:gravity="bottom"
                android:maxLines="1"
                tools:ignore="HardcodedText" />

            <TextView
                android:inputType="none"
                android:text="Gordura (%)"
                android:ems="10"
                android:id="@+id/editText4"
                android:layout_height="45dp"
                android:layout_width="wrap_content"
                tools:textAlignment="gravity"
                android:gravity="bottom"
                android:maxLines="1"
                tools:ignore="HardcodedText" />

            <TextView
                android:inputType="none"
                android:text="Hidratação (%)"
                android:ems="10"
                android:id="@+id/editText5"
                android:layout_height="45dp"
                android:layout_width="wrap_content"
                tools:textAlignment="gravity"
                android:gravity="bottom"
                android:maxLines="1"
                tools:ignore="HardcodedText" />

            <TextView
                android:inputType="none"
                android:text="Músculo (Kg)"
                android:ems="10"
                android:id="@+id/editText6"
                android:layout_height="45dp"
                android:layout_width="wrap_content"
                tools:textAlignment="gravity"
                android:gravity="bottom"
                android:maxLines="1"
                tools:ignore="HardcodedText" />

            <TextView
                android:inputType="none"
                android:text="Osso (Kg)"
                android:ems="10"
                android:id="@+id/editText7"
                android:layout_height="45dp"
                android:layout_width="wrap_content"
                tools:textAlignment="gravity"
                android:gravity="bottom"
                android:maxLines="1"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <Spinner
                android:id="@+id/spinnerUsuario"
                android:layout_height="45dp"
                android:ems="10"
                android:entries="@array/user_arrays"
                android:prompt="@string/user_prompt"
                android:textAlignment="center"
                android:layout_width="120dp" />

                <ImageButton
                    android:src="@drawable/plus_gray_48px"
                    android:id="@+id/imageButton"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_marginLeft="5dp"
                    android:contentDescription="@string/adicionar_usuario"
                    android:layout_height="30dp"
                    tools:ignore="RtlHardcoded"
                    style="@android:style/Widget.DeviceDefault.Light.ImageButton"
                    android:cropToPadding="false"
                    android:adjustViewBounds="true"
                    android:visibility="visible"
                    android:layout_width="30dp" />

            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:inputType="date"
                android:ems="10"
                android:id="@+id/txtData" />

            <EditText
                android:layout_width="match_parent"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/txtPeso"
                android:layout_height="45dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/txtGordura" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/txtHidratacao" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/txtMusculo" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/txtOsso" />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
